[all]
bears = LineCountBear, FilenameBear
files = **.py, **.yaml, **.rst, **.md
ignore = **/__pycache__/**, **/__pycache__, __pycache__, __pycache__/**, **/*.pyc, *.pyc, ./objects/namespace-install.yaml
max_lines_per_file = 1000
max_line_length = 120

[all.python]
bears = PycodestyleBear, PyDocStyleBear
files = **.py
language = Python
editor = vim
ignore = setup.py

[zuul.yaml]
bears = YAMLLintBear
files = .zuul.yaml
max_line_length = 180
